# Configure Laravel Scheduler
files:
  "/etc/cron.d/laravel-scheduler":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * webapp cd /var/app/current && /usr/bin/php artisan schedule:run >> /dev/null 2>&1

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"

